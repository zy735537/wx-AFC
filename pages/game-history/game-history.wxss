/* Match items */
.match {
    display: table;
    text-align: center;    
    width: 100%;    
}

  .match.rankItem {
    padding: 0;
  }

    .match:focus {
        background-color: #e1e1e1;
    }

    .match .match-person-a,
    .match .match-person-b {
        display: table-cell;     
        vertical-align: middle;
        width: 47%;   
        padding: 5px 5px;
    }

        .match .match-person-a .user-icon,
        .match .match-person-b .user-icon {            
            display: inline-block;
            text-align: center;
            padding: 0 5px;
        }

        .match .match-person-a .overall,
        .match .match-person-b .overall {
            display: block;
            font-family: 'Arial Black', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 10px;    
            font-weight: normal;            
        }

    .match .match-total {
        display: table-cell;
        width: 20px;
    }

    .match .match-score {
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        width: 25px;
        padding: 0 5px;
    }

.match-person-a {
    text-align: right;
}

.match-person-b {
    text-align: left;
}

.match-score,
.match-score-multiple {
    text-align: center;    
    font-family: Impact, 'Arial Black', Haettenschweiler, 'Arial Narrow Bold', sans-serif;        
    display: table-row;
    width: 30px;
}

.match.inactive .match-score,
.match.inactive .match-score-multiple {    
    color: #ccc;
}

    .match-score.match-score-multiple {
        display: table-row;
        font-size: 14px;
    }

    .match-score .score-a,
    .match-score .score-b,
    .match-score .score-separator {
        display: table-cell;
        text-align: center;
    }

    .match-score .score-a,
    .match-score .score-b {         
        min-width: 15px;
    }

        .match-score .score-separator {
            min-width: 10px;
        }

